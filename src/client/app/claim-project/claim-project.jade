main
  .detailsContainer
    .statusModal(ng-show="showClaimedModal")
        span Congratulations! You have claimed this project.
        br
        button(ng-click="revealProjectEstimates()", ui-sref="claim-project.challenges") Create Estimates
        br
        a(ng-click="revealCreateEstimatesButton()") I'll do it later

    //- .statusModal(ng-show="showCreateChallengesModal")
    //-     span Estimate Created.
    //-     br
    //-     button(ng-click="openCreateChallenges()") Create Challenges
    //-     br
    //-     a(ng-click="hideCreateChallengesModal()") I'll do it later

    h2{{ work.name | cutOff}}
    div
        h3 {{work.requestType | requestType}} Project
    button(ng-if="!projectAvailable()", ui-sref="messaging({ id: threadId })") Message Client
    button(ng-if="projectAvailable()", ng-click="submitClaim()") Claim Project
    button(ng-if="showCreateEstimatesButton()", ui-sref="claim-project.challenges") Create Estimates
    p.awaitingApproval(ng-if="showAwaitingApproval()") Project estimate complete. Awaiting client approval.
    button(ng-if="showCreateChallengesButton()", ng-click="openCreateChallenges()") Create Challenges
    button(ng-if="showLaunchButton()", ng-click="launchProject()") Launch Project
    br
    hr

    .summary
        h5 Project Description
        p {{work.summary}}

    .similarApps
        h5 Similar Apps
        ul
        p(ng-repeat="competitor in work.competitorApps") {{competitor}}

    .usersDescription
        h5 Description of Users
        p {{work.usageDescription}}

    .features
        h5 Features
        ul
        p(ng-repeat="feature in work.features") {{feature.name}}: {{feature.description}}

    .visualElements
        h5 Visual Elements

  aside(ui-view="")



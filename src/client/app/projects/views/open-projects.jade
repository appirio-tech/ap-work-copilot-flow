dropdown.dropdown(ng-hide="!vm.workRequests.length")
  .dropdown-container
    p.dropdown-button.type(ng-click="vm.toggleTypeFilterMenu()", ng-bind="vm.typeFilterValue || 'All Project Types'")
      ul.dropdown-menu.dropdown-select.type(ng-class="{'show-menu': vm.showTypeFilterMenu}")
        li(ng-repeat="typeFilter in vm.typeFilters", ng-click="vm.selectType(typeFilter)") {{typeFilter}}
//- p Sort By:
//-   a(ng-click="vm.reverseOrder()") Start Date
ul
  li(ng-repeat= "project in filteredWorkRequests=(vm.workRequests | orderBy:'createdAt':vm.reverse | filter: vm.typeFilter)", ng-mouseenter="vm.hoverSelect($index)", ng-mouseleave="vm.hoverDeselect($index)")
    div(class="tile", ng-class="{'hovered': $index == vm.active}")
      h5 {{project.name}}
      br
      img(src="projects/images/dev-project-icon.png", ng-class="{'faded': $index == vm.active}")
      br
      span.type {{project.requestType | uppercase }}
      br
      br
      span.created Project Created - {{project.createdAt | date:'MM/dd/yyyy'}}
      br
      button(ng-show="$index == vm.active", ui-sref='claim-project({id: project.id})') View Details
.noProjectsMessage(ng-show="!filteredWorkRequests.length")
  h1 Sorry, there are no available {{vm.selectedType}} projects at this time.

loader(ng-show="vm.loading")

ul.flex.center
  li.projectLi(
    ng-repeat= "project in filteredWorkRequests=(vm.workRequests | orderBy:'createdAt':true | filter: vm.typeFilter)"
  )
    a
     h6 {{ project.name }} this is a really really really long name

    hr

    main
      .icon.warning.biggest

      h6 {{ project.requestType }}

      span.created(ng-show="vm.showDetailSpan('view-projects.open')") Project Created - {{project.createdAt | date:'MM/dd/yyyy'}}

      span.created(ng-show="vm.showDetailSpan('view-projects.assigned')") {{project.status}}

      button(ui-sref="project-details({id: project.id})") view project

      button(ui-sref="project-details({id: project.id})") claim project

p(ng-if="!vm.loading && !filteredWorkRequests.length") Sorry, there are no available {{vm.selectedType}} projects at this time.

.no-projects
  p You have not claim any projects yet.

  a.button.action.wider(ui-sref="submit-work") claim a project